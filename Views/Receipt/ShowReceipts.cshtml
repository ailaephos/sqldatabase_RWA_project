@model rwa_projekt_katlija_2407.Models.ViewModels.ReceiptVM

@{
    ViewBag.Title = "ShowReceipts";
}

<div style="width: 80vw; height: auto; background-color: #3F3F3F; border: solid 1px #3F3F3F; border-radius: 10px; text-align:center; " class="container">
    <h1 style="width: 150px; margin-top:-12px;">Receipts by customer</h1>
    <div class="contbtnh" style="text-align: center; background-color: #FFDF6C">       
        <h4 class="addstateheader" style="margin-left:0;">Receipts by @Html.Partial(partialViewName: "_Customer", model: Model.Customer)</h4>
    </div>
    <div style="border: 6px solid white; border-radius: 7px; background-color: white; width: 40vw; margin: auto; padding-bottom: 2vh; margin-bottom: 5px;">
        <table class="table" style="margin-bottom: 5px;">
            <thead style=" font-family: 'Economica', sans-serif; color: black; font-size: 25px;">
                <tr>
                    <td>Receipt number</td>
                    <td>Date of Issue</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Receipts)
                {
                    <tr style=" font-family: 'Economica',sans-serif;">
                        <td>@r.BrojRacuna</td>
                        <td>@r.DatumIzdavanja</td>
                        <td>   <a href="@Url.Action(controllerName:"Receipt", actionName:"ShowDetails", routeValues: new {id=r.IDRacun})"><span class="editImg" style="text-decoration: none; color: white; font-size: 15px; ">Details</span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

